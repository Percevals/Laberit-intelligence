{
  "name": "@dii/core",
  "version": "1.0.0",
  "description": "Core DII dimension conversion system for normalizing user responses to 1-10 scale",
  "main": "converters/dimension-converters.js",
  "types": "converters/dimension-converters.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "files": [
    "converters/**/*",
    "*.d.ts"
  ],
  "exports": {
    ".": {
      "import": "./converters/dimension-converters.js",
      "require": "./converters/dimension-converters.js",
      "types": "./converters/dimension-converters.d.ts"
    },
    "./examples": {
      "import": "./converters/usage-examples.js",
      "require": "./converters/usage-examples.js",
      "types": "./converters/usage-examples.d.ts"
    }
  },
  "keywords": [
    "dii",
    "cyber-security",
    "risk-assessment",
    "digital-immunity",
    "conversion",
    "normalization"
  ],
  "author": "Laberit Intelligence",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/converters"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "converters/**/*.ts",
      "!converters/**/*.test.ts",
      "!converters/**/usage-examples.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/laberit-intelligence/dii-platform.git",
    "directory": "packages/@dii/core"
  }
}